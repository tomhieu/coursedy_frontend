{
  "extends": ["airbnb", "plugin:ava/recommended"],
  "parser": "babel-eslint",
  "plugins": ["ava"],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "comma-dangle": [1, "only-multiline"],
    "no-underscore-dangle": 0,
    "max-len": [1, 180, 4],
    "arrow-body-style": [0],
    "react/jsx-no-bind": [0],
    "import/no-unresolved": [0],
    "react/prefer-stateless-function": "off",
    "no-unused-vars": 0,
    "no-param-reassign": 0,
    "camelcase": 0,
    "no-script-url": 0
  }
}
